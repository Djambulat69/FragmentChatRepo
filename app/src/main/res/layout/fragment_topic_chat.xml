<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topic_chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        tools:title="#general" />

    <View
        android:id="@+id/topic_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topic_helper_view" />

    <TextView
        android:id="@+id/chat_topic_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_topic_title_height"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/topic_chat_toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Topic: #testing" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topic_chat_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/topic_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_topic_title"
        app:stackFromEnd="true"
        tools:itemCount="4"
        tools:listitem="@layout/incoming_message_layout" />

    <EditText
        android:id="@+id/topic_message_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/message_edit_text_margin_end"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/message_edit_text_bg"
        android:hint="@string/message_hint"
        android:imeOptions="flagNoExtractUi"
        android:maxLines="3"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/topic_send_button"
        android:layout_width="@dimen/send_button_size"
        android:layout_height="@dimen/send_button_size"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/send_button_bg"
        android:paddingStart="@dimen/send_button_start_offset"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/topic_message_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_send"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/topic_add_file_button"
        android:layout_width="@dimen/send_button_size"
        android:layout_height="@dimen/send_button_size"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/topic_message_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topic_message_edit_text"
        app:srcCompat="@drawable/ic_vector_add"
        tools:visibility="gone" />

    <View
        android:id="@+id/topic_helper_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@id/topic_message_edit_text" />

    <include
        android:id="@+id/include_topic_messages_shimmer"
        layout="@layout/shimmer_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/topic_group"
        app:layout_constraintTop_toBottomOf="@+id/chat_topic_title" />

</androidx.constraintlayout.widget.ConstraintLayout>

