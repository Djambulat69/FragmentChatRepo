<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shimmer_user_avatar"
        android:layout_width="@dimen/user_list_avatar_size"
        android:layout_height="@dimen/user_list_avatar_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageViewShape"
        app:srcCompat="@mipmap/ic_launcher" />

    <View
        android:id="@+id/shimmer_online_icon"
        android:layout_width="@dimen/online_icon_view_size"
        android:layout_height="@dimen/online_icon_view_size"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/online_icon_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_user_avatar"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_user_avatar" />

    <TextView
        android:id="@+id/shimmer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Name Surname"
        android:background="@drawable/primary_round_rect_shape_bg"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintStart_toEndOf="@+id/shimmer_user_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shimmer_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/primary_round_rect_shape_bg"
        android:text="User Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/shimmer_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
